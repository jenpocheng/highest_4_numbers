# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

SRC_DIR = .
CC = g++
CFLAGS = 
DEPS = highest_n.h
OBJS = main.o highest_n.o
PROG = highest_4

all : $(PROG)

$(PROG): $(OBJS)
	$(CC) -o $@ $^ $(CFLAGS)

%.o: %.cc $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

clean :
	rm -f $(PROG) *.o
